<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>MyImageManager</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/db_image_manager_pure_html?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>password</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>imagesPath</param-name>
    <param-value>/Users/kevin/Desktop/tiw-project-pure-html/</param-value>
  </context-param>
  
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
  
  <error-page>
	  <location>/WEB-INF/error.html</location>
  </error-page>
  
  <filter>
  	<filter-name>CheckUserLogged</filter-name>
  	<filter-class>it.polimi.tiw.image_manager.filters.CheckUserLogged</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CheckUserLogged</filter-name>
  	<url-pattern>/AddCommentToImage</url-pattern>
  	<url-pattern>/AddNewImageToAlbum</url-pattern>
  	<url-pattern>/AddExistingImageToAlbum</url-pattern>
  	<url-pattern>/CreateAlbum</url-pattern>
  	<url-pattern>/DisplayImage</url-pattern>
  	<url-pattern>/GoToAlbumPage</url-pattern>
  	<url-pattern>/GoToHomePage</url-pattern>  	
  	<url-pattern>/GoToImagePage</url-pattern>
  	<url-pattern>/DeleteImageFromAlbum</url-pattern>  	
  	<url-pattern>/ShowNextImages</url-pattern>
  	<url-pattern>/ShowPreviousImages</url-pattern>
  </filter-mapping>
</web-app>